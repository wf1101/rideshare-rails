<h4>
  <% page_title ||= "Trip" %>
  <%= page_title %>
</h4>

<%= render partial: "layouts/errors_messages", locals: {model: @trip } %>

<strong>
  <ul class="trip_list">
    <li>
      Trip ID
    </li>
    <li>
      Date
    </li>
    <li class="names">
      Driver
    </li>
    <li class="names">
      Passenger
    </li>
    <li>
      Cost
    </li>
    <li>
      Rating
    </li>
    <li>
      Review
    </li>
    <li>
      Delete
    </li>
  </ul>
</strong>

<ul class="trip_list">
  <li>
    <%= link_to "# #{@trip.id}", passenger_trip_path(@trip.passenger_id, @trip.id) %>
  </li>
  <li>
    <%= @trip.date %>
  </li>
  <li class="names">
    <%= link_to "#{@trip.driver.name}", driver_path(@trip.driver) %>
  </li>
  <li class="names">
    <%= link_to "#{@trip.passenger.name}", passenger_path(@trip.passenger) %>
  </li>
  <li>
    <%= @trip.cost %>
  </li>
  <li>
    <%= @trip.rating %>
  </li>
  <li>
    <%= link_to("Add A Review", edit_passenger_trip_path(@trip.passenger.id, @trip.id)) %>
  </li>

  <li>
    <%= link_to("Delete", passenger_trip_path(@trip.passenger.id, @trip.id), method: :delete, data: {confirm: "Are you sure you want to delete Trip #{@trip.id}"}) %>
  </li>
</ul>

<% if @trip.review %>
<p>
  <strong> <%= "#{@trip.passenger.name}'s review for this trip:" %> </strong>
</p>
<p>
  <%= @trip.review %>
</p>
<% end %>
