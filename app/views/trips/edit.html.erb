<ul class="trip_list">
  <li>
    <%= link_to "# #{@trip.id}", passenger_trip_path(@trip.passenger_id, @trip.id) %>
  </li>
  <li>
    <%= @trip.date %>
  </li>
  <li>
    <%= link_to "#{@trip.driver.name}", driver_path(@trip.driver) %>
  </li>
  <li>
    <%= link_to "#{@trip.passenger.name}", passenger_path(@trip.passenger) %>
  </li>
  <li>
    <%= @trip.cost %>
  </li>
  <li>
    <%= @trip.rating %>
  </li>


  <%= form_for @trip do |f| %>
  <%= f.label :review %>
  <%= f.text_area :review %>
  <%= f.submit %>
  <% end %>
